<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activityall.SignInActivity">

    <LinearLayout
        android:id="@+id/linear_layout_id_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
       android:layout_centerInParent="true"
        >

        <TextView
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/user_email_id"
            android:hint="mleon@gmail.com"
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/user_password_id"
            android:hint="1234"
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <info.hoang8f.widget.FButton
            android:id="@+id/sign_in_button"
            android:text="Sign In"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            app:fButtonColor="@color/colorPrimaryLight"
            app:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="8dp"

            />

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/linear_layout_id_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"

        >

        <TextView
            android:id="@+id/create_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I do not have an account"
            android:textSize="10sp"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/forgot_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I forgot password"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>

</RelativeLayout>